{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "target": "ES6",
    "sourceMap": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
